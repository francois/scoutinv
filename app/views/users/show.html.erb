<div class="grid-x grid-margin-x">
  <div class="large-9 medium-12 cell">
    <%= link_to "Edit", edit_user_path(@user), class: "button large hide-for-large" %>
    <%= link_to "Back to list", users_path, class: "button secondary large hide-for-large" %>

    <div>
      <strong>Name:</strong>
      <%= @user.name %>
    </div>

    <div>
      <strong>Email:</strong>
      <%= mail_to @user.email, @user.email %>
    </div>
  </div>

  <div class="large-3 medium-12 cell show-for-large">
    <%= link_to "Edit", edit_user_path(@user), class: "button expanded" %>
    <%= link_to "Back to list", users_path, class: "button secondary expanded" %>
  </div>
</div>
