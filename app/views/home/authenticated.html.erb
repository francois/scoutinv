<div class="grid-x grid-margin-x">
  <div class="small-12 medium-6 cell">
    <h2><%= t ".future_events" %></h2>
    <ul>
      <% @events.each do |event| %>
        <li>
          <%= link_to event.title, event_reservations_path(event) %>
          <small><%= format_date_range(event.date_range) %></small>
        </li>
      <% end %>
    </ul>
    <%= link_to t(".new_event"), new_event_path, class: "button small" %>
  </div>

  <div class="small-12 medium-6 cell">
    <h2><%= t ".old_gadgets" %></h2>
    <ul>
      <% @products.each do |product| %>
        <li><%= link_to product.name, product %></li>
      <% end %>
    </ul>
    <%= link_to t(".new_product"), new_product_path, class: "button small" %>
  </div>
</div>
