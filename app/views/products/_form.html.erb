<%= form_with(model: product, local: true) do |form| %>
  <div class="grid-container">
    <div class="grid-x grid-padding-x">
      <% if product.errors.any? %>
        <div class="small-12 cell">
          <div id="error_explanation">
            <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
              <% product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="small-12 cell">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="small-12 cell">
        <fieldset class="fieldset">
          <legend>Location</legend>
          <%= form.label :aisle %>
          <%= form.text_field :aisle %>

          <%= form.label :shelf %>
          <%= form.text_field :shelf %>

          <%= form.label :unit %>
          <%= form.text_field :unit %>
        </fieldset>
      </div>

      <div class="small-12 cell">
        <%= form.label :description %>
        <%= form.text_area :description, size: "10x5" %>
      </div>

      <div class="small-12 cell">
        <fieldset class="fieldset">
          <legend>Categories</legend>
          <%= form.collection_check_boxes :category_slugs, @categories, :slug, :name %>
        </fieldset>
      </div>

      <div class="small-12 cell">
        <%= form.submit class: "button primary" %>
        or
        <% if @product.new_record? %>
          <%= link_to "Cancel", products_path, class: "button secondary" %>
        <% else %>
          <%= link_to "Cancel", @product, class: "button secondary" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
