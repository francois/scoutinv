<div class="grid-x grid-margin-x">
  <div class="large-9 medium-12 cell">
    <%= form_tag event_reservations_path(@event), method: :get, class: "search-form" do %>
      <div class="grid-container">
        <div class="grid-x grid-margin-x">
          <div class="medium-shrink cell show-for-sr">
            <%= label_tag :filter, t(".filter_label"), class: "middle" %>
          </div>
          <div class="medium-shrink cell">
            <%= text_field_tag :filter, @filter, placeholder: t(".filter_label"), autocomplete: false %>
          </div>

          <div class="medium-shrink cell show-for-sr">
            <%= label_tag :category, t(".category"), class: "middle" %>
          </div>
          <div class="medium-shrink cell">
            <%= select_tag :category, options_from_collection_for_select(@categories, :slug, ->(category){ t(category.name, scope: "categories") }, @selected_category ? @selected_category.slug : nil), include_blank: true %>
          </div>

          <div class="cell">
            <div class="grid-container">
              <div class="grid-x grid-margin-x">
                <div class="large-6 cell">
                  <%= check_box_tag :only_show_available_products, "1", @only_show_available_products %>
                  <%= label_tag :only_show_available_products, t(".only_show_available_products_label") %>
                </div>
                <div class="large-6 cell">
                  <%= check_box_tag :only_show_my_reserved_products, "1", @only_show_my_reserved_products %>
                  <%= label_tag :only_show_my_reserved_products, t(".only_show_my_reserved_products_label") %>
                </div>
                <div class="large-6 cell">
                  <%= check_box_tag :only_show_reserved_products, "1", @only_show_reserved_products %>
                  <%= label_tag :only_show_reserved_products, t(".only_show_reserved_products_label") %>
                </div>
                <div class="large-6 cell">
                  <%= check_box_tag :only_show_leased_products, "1", @only_show_leased_products %>
                  <%= label_tag :only_show_leased_products, t(".only_show_leased_products_label") %>
                </div>
              </div>
            </div>
          </div>

          <div class="medium-auto cell">
            <%= submit_tag t(".search_button_label"), class: "button" %>Â <%= link_to t(".view_all_button_label"), event_reservations_path(@event), class: "button secondary" %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid-container">
      <div class="grid-x grid-margin-x">
        <div class="cell">
          <%= link_to t(".back_to_event"), @event, class: "button hide-for-large" %>
        </div>
      </div>
    </div>

    <div class="grid-container">
      <div class="grid-x grid-margin-x">
        <div class="cell">
          <table class="hover stack product-list">
            <thead>
              <th><%= t(".product_header") %></th>
              <th><%= t(".reservations_header") %></th>
              <th><%= t(".leased_on_header") %></th>
              <th><%= t(".returned_on_header") %></th>
              <th></th>
            </thead>
            <tbody>
              <% if @products.empty? %>
                <tr>
                  <td colspan="5"><%= t(".sorry_no_elements") %></td>
                </tr>
              <% end %>
              <% @products.each do |product| %>
                <tr class="<%= product_reservation_css_class(@event, product) %>">
                  <td>
                    (<%= number_with_delimiter product.quantity %>) <%= link_to product.name, event_product_path(@event, product) %> <br>
                    <%= product_image product, height: 100 %>
                  </td>
                  <td>
                    <% product.reservations.select{|res| res.event_overlaps?(@event)}.group_by(&:event).each do |group, reservations| %>
                      <% reservation = reservations.first %>
                      <span title="<%= format_date_range(reservation.date_range) %>"><%= reservation.event.title %></span>
                      <% if reservations.size > 1 %>
                        (<%= number_with_delimiter reservations.size %>)
                      <% end %>
                      <br>
                    <% end %>
                  </td>
                  <td>
                    <% if leased_on = @event.reservations.detect{|reservation| reservation.product == product}&.leased_on %>
                      <span class="hide-for-large"><%= t(".leased_on_header") %></span> <%= l leased_on, format: :default %>
                  <% end %>
                  </td>
                  <td>
                    <% if returned_on = @event.reservations.detect{|reservation| reservation.product == product}&.returned_on %>
                      <span class="hide-for-large"><%= t(".returned_on_header") %></span> <%= l returned_on, format: :default %>
                  <% end %>
                  </td>
                  <td>
                    <div class="grid-x grid-margin-x">
                      <div class="auto cell">
                        <%= form_tag event_reservations_path(@event), method: :post do %>
                          <%= hidden_field_tag "products[#{product.slug}]", "1" %>
                          <%= hidden_field_tag "add", "1" %>
                          <%= button_tag class: "button primary small expanded",
                            disabled: @double_booked_products.include?(product) || product.quantity == @event.reservations.select{|reservation| reservation.product == product}.size,
                            title: t(".plus_one_hover") do %>
                            <%= t(".plus_one") %>
                          <% end %>
                        <% end %>
                      </div>
                      <div class="auto cell">
                        <%= form_tag event_reservations_path(@event), method: :post do %>
                          <%= hidden_field_tag "products[#{product.slug}]", "1" %>
                          <%= hidden_field_tag "remove", "1" %>
                          <%= button_tag title: t(".minus_one_hover"), class: "button secondary small expanded", disabled: @event.reservations.select{|reservation| reservation.product == product}.empty? do %>
                            <%= t(".minus_one") %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @products %>
        </div>
      </div>
    </div>

    <% if @products.any? %>
      <div class="grid-container">
        <div class="grid-x grid-margin-x">
          <div class="small-12 medium-auto cell">
            <h3><%= t ".inventory_people" %></h3>
          </div>
          <div class="small-12 medium-auto cell">
            <%= submit_tag t(".lease_product_button_label"), name: "lease", class: "button expanded success" %>
          </div>
          <div class="small-12 medium-auto cell">
            <%= submit_tag t(".lease_all_button_label"), name: "lease_all", class: "button expanded success" %>
          </div>
          <div class="small-12 medium-auto cell">
            <%= submit_tag t(".return_product_button_label"), name: "return", class: "button expanded secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="large-3 medium-12 cell show-for-large">
    <%= link_to t(".back_to_event"), @event, class: "button expanded" %>
  </div>
</div>
