<div class="grid-x grid-margin-x">
  <div class="large-2 medium-4 cell show-for-medium">

    <%= link_to t(".back_to_event"), @event, class: "button expanded" %>

    <hr>

    <%= form_tag event_reservations_path(@event), method: :get, class: "search-form" do %>

      <div class="auto cell">
        <%= label_tag :filter, t(".filter_label"), class: "show-for-sr" %>
        <%= text_field_tag :filter, @filter, placeholder: t(".filter_label"), autocomplete: false %>
      </div>

      <%= label_tag :category, t(".categories"), class: "h3" %>
      <% @categories.each do |category| %>
        <div class="auto cell">
          <%= check_box_tag category.name, "1", @selected_categories.include?(category) %>
          <%= label_tag category.name, t(category.name, scope: "categories") %>
        </div>
      <% end %>

      <%= submit_tag t(".search_button_label"), class: "button primary expanded", name: nil %>
      <%= link_to t(".view_all_button_label"), event_reservations_path(@event), class: "button secondary expanded" %>

    <% end %>

  </div>
  <div class="large-10 medium-8 small-12 cell">
    <div class="small-12 cell">
      <%= link_to t(".back_to_event"), @event, class: "button hide-for-medium" %>

      <%= link_to t(:previous_html, scope: "views.pagination"), @prev_page_path, class: "button large" if @prev_page_path %>

      <%= link_to t(:next_html, scope: "views.pagination"), @next_page_path, class: "button large" if @next_page_path %>
    </div>

    <div class="grid-x grid-margin-x small-up-1 medium-up-2 large-up-3">
      <% @entities.each do |entity| %>
        <%= render partial: "entity", object: entity %>
      <% end %>
    </div>

    <div class="small-12 cell">
      <%= link_to t(".back_to_event"), @event, class: "button hide-for-medium" %>

      <%= link_to t(:previous_html, scope: "views.pagination"), @prev_page_path, class: "button large" if @prev_page_path %>

      <%= link_to t(:next_html, scope: "views.pagination"), @next_page_path, class: "button large" if @next_page_path %>
    </div>
  </div>
</div>
