<p id="notice"><%= notice %></p>

<p>
  <strong>Group:</strong>
  <%= @event.group.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @event.notes %>
</p>

<p>
  <strong>Start on:</strong>
  <%= @event.start_on %>
</p>

<p>
  <strong>End on:</strong>
  <%= @event.end_on %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %> |
<%= link_to 'Reservations', reservations_path(@event) %>

<h2>Bill of materials</h2>
<ol>
  <% @event.reservations.map(&:product).each do |product| %>
    <li><%= link_to product.name, product_path(product) %></li>
  <% end %>
</ol>
