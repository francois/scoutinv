<div id="product-card-<%= consumable.slug %>" class="cell">
  <div class="card">
    <div class="card-divider">
      <h4 class="auto cell">
        <%= link_to consumable.name, consumable_path(consumable) %>
      </h4>
    </div>
    <%= link_to consumable do %>
      <%= entity_image consumable, height: 250 %>
    <% end %>
    <div class="card-section">
      <% if consumable.description.present? %>
        <%= simple_format consumable.description %>
      <% end %>
      <p>
      <%= format_quantity @event.quantity_of(consumable), precision: 1 %>  &times;  <%= number_to_currency @event.unit_price_of(consumable) %> / <%= format_quantity consumable.base_quantity %>  =  <%= number_to_currency @event.subtotal_of(consumable) %>
      </p>
      <% if consumable.has_location? %>
        <p>
        <small>
          <strong><%= t("activerecord.attributes.consumable.location") %></strong>:
          <%= format_product_location(consumable) %>
        </small>
        </p>
      <% end %>
    </div>
  </div>
</div>
